<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_marginTop="@dimen/marginBase"
        android:src="@drawable/calculator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tamanioImagen">
    </ImageView>
    <LinearLayout
    android:layout_marginTop="@dimen/marginBase"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="@string/n1Texto"
        android:gravity="center_horizontal"
        android:layout_weight="2"
        android:textSize="@dimen/tamanioLetra"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:id="@+id/n1Txt"
        android:layout_weight="1"
        android:inputType="number"
        android:textSize="@dimen/tamanioLetra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/marginBase2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textSize="@dimen/tamanioLetra"
            android:text="@string/n2Texto"
            android:layout_weight="2"
            android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:id="@+id/n2Txt"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="@dimen/tamanioLetra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/marginBase2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:onClick="sumar"
            android:layout_width="match_parent"
            android:text="@string/sumarText"
            android:layout_weight="1"
            android:background="@color/colorSuma"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/tamanioLetra"
            android:layout_height="@dimen/TamanioButton">
        </Button>
        <Button
            android:onClick="restar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/TamanioButton"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/tamanioLetra"
            android:background="@color/colorResta"
            android:textColor="@color/primary_light">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:onClick="multiplicar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/TamanioButton"
            android:layout_weight="1"
            android:text="*"
            android:textSize="@dimen/tamanioLetra"
            android:background="@color/colorMultiplicar"
            android:textColor="@color/primary_light">
        </Button>
        <Button
            android:onClick="dividir"
            android:layout_width="match_parent"
            android:layout_height="@dimen/TamanioButton"
            android:layout_weight="1"
            android:text="/"
            android:textSize="@dimen/tamanioLetra"
            android:background="@color/colorDividir"
            android:textColor="@color/primary_light">
        </Button>
    </LinearLayout>
</LinearLayout>